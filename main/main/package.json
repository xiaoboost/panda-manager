{
  "name": "@panda/shared",
  "version": "1.0.0",
  "description": "panda-manager shared",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "lint": "eslint --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "dev": "esbuild src/index.ts --bundle --watch --outfile=./dist/index.js --format=iife --define:process.env.NODE_ENV=\\\"development\\\" --main-fields=module,main --platform=node --target=es6",
    "build": "esbuild src/index.ts --bundle --outfile=./dist/index.js --format=iife --define:process.env.NODE_ENV=\\\"production\\\" --main-fields=module,main --platform=node --target=es6 --minify"
  },
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/panda-manager"
  },
  "dependencies": {
    "@panda/db": "workspace:*",
    "@panda/fs": "workspace:*",
    "@panda/shared": "workspace:*",
    "@panda/utils": "workspace:*",
    "electron": "11.3.0"
  },
  "devDependencies": {
    "@panda/tsconfig": "workspace:*",
    "esbuild": "^0.8.51",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.5"
  }
}

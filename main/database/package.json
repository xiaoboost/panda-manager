{
  "name": "@panda/db",
  "version": "1.0.0",
  "description": "panda-manager database",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "dev": "tsc -w -p ./tsconfig.dev.json",
    "build:esm": "tsc -p ./tsconfig.build.json",
    "build": "pnpm run clear && pnpm run build:esm",
    "lint": "eslint --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "test": "nyc ava --no-cache",
    "prepare": "pnpm run build"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "tests/*.spec.ts"
    ]
  },
  "dependencies": {
    "@panda/utils": "workspace:*",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@panda/tsconfig": "workspace:*",
    "@types/node": "^14.14.31",
    "@types/panda": "workspace:*",
    "memfs": "^3.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.2"
  }
}

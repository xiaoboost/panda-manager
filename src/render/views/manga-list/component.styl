@import '../../css/variable.styl';

#main-list {
    .main-list-header {

    }

    .main-list-article {
        overflow-x: hidden;
        overflow-y: auto;

        padding: 10px;

        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }

    .manga-item {
        margin: 10px;
        flex-shrink: 0;
        flex-grow: 0;
        border-radius: 2px;
        box-shadow: 0 0 2px Shadow;
        transition: all 100ms linear;

        img {
            border-radius: 2px;
        }
    }

    .manga-item__selected {
        box-shadow: 0 0 6px Blue;
    }
}

#sort-menu {
    .ant-dropdown-menu-item > a {
        display: flex;
        align-items: center;
        margin-left: -5px;
        margin-right: -5px;
        padding-left: 0;
        padding-right: 0;
    }

    .anticon {
        font-size: 10px;
        color: Blue;
        min-width: 12px;
        margin-right: 8px;
    }
}

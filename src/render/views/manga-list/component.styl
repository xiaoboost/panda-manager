@import '../../css/variable.styl';

#main-list {
    .main-list-header {

    }

    .main-list-article {
        overflow-x: hidden;
        overflow-y: auto;

        padding: 10px;

        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        flex-grow: 1;
        justify-content: flex-start;
        align-items: self-start;
        align-content: flex-start;
    }

    .manga-item {
        margin: 10px;
        flex-shrink: 0;
        flex-grow: 0;
        box-shadow: 2px 2px 4px Shadow;
        position: relative;

        .manga-item__mask {
            opacity: 0;
            transition: opacity 100ms linear;
        }

        &.manga-item__selected .manga-item__mask {
            opacity: 1;
        }

        .manga-item__mask,
        .manga-item__mask-outside,
        .manga-item__mask-inside {
            position: absolute;
            width: 100%;
            height: 100%;
        }
        
        .manga-item__mask-outside {
            border: 2px solid #316AC5;
            z-index: 10;
        }

        .manga-item__mask-inside {
            border: 3px solid #FFFFFF;
            z-index: 9;
        }
    }
}

#sort-menu {
    .ant-dropdown-menu-item > a {
        display: flex;
        align-items: center;
        margin-left: -5px;
        margin-right: -5px;
        padding-left: 0;
        padding-right: 0;
    }

    .anticon {
        font-size: 10px;
        color: Blue;
        min-width: 12px;
        margin-right: 8px;
    }
}

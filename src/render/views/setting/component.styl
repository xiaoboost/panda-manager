main#main-setting {
    .setting-article {
        width: 680px;
        margin: 0 auto;    
    }

    .settings-section {
        .settings-title {
            margin: 28px 0 16px 0;
            font-size: 14px;
            color: rgb(32, 33, 36);
        }

        .settings-card {
            display: flex;
            flex-direction: column;
            font-size: 13px;
            background-color: #fff;
            border-radius: 4px;
            box-shadow: 0 1px 5px #aaa;
        }

        .settings-box {
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
            min-height: 48px;
            padding: 0 20px;
        }
    }
}

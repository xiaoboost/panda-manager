main#main-setting {
    .setting-article {
        width: 680px;
        margin: 0 auto;    
    }

    .settings-section {
        .settings-title {
            margin: 28px 0 16px 0;
            font-size: 14px;
            color: rgb(32, 33, 36);
        }

        .settings-card {
            display: flex;
            flex-direction: column;
            font-size: 13px;
            background-color: #fff;
            border-radius: 4px;
            box-shadow: 0 1px 5px #aaa;
        }

        .settings-line, .settings-subline {
            display: flex;
            justify-content: space-between;
            align-items: center;
            min-height: 48px;
            padding: 14px 20px;
        }

        .settings-subline {
            padding: 12px 20px 12px 24px;
            min-height: 44px;
        }

        .anticon {
            font-size: 20px;
            cursor: pointer;
        }

        .settings-line__name, .settings-line__subname {
            line-height: 140%;
        }

        .settings-line__subname {
            color: rgb(95, 99, 104);
        }
    }
}

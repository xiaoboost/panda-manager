@import '../../css/variable.styl';

#main-list {
    diaplay: flex;
    flex-direction: column;

    height: 100%;
    width: 100%;

    .main-list-header {
        flex-grow: 0;
        flex-shrink: 0;

        width: 100%;
        height: 50px;
        background-color: #3D3D3D;
        box-shadow: 0 3px 3px Shadow;
        padding: 12px;
        display: flex;

        .anticon {
            color: #fff;
            font-size: 18px;
            padding: 4px;
        }

        > * {
            flex-grow: 0;
            flex-shrink: 0;
        }
    }

    .main-list-article {
        flex: 1;
        overflow-x: hidden;
        overflow-y: auto;
    }
}

@import '../../css/variable.styl';

#main-list {
    .main-list-header {

    }

    .main-list-article {
        overflow-x: hidden;
        overflow-y: auto;

        padding: 10px;

        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }

    .manga-item {
        margin: 10px;
        flex-shrink: 0;
        flex-grow: 0;
        border-radius: 2px;
        box-shadow: 0 0 2px #bbb;
        transition: all 100ms linear;

        img {
            border-radius: 2px;
        }
    }

    .manga-item__selected {
        box-shadow: 0 0 6px #1890ff;
    }
}

#sort-menu {
    .ant-dropdown-menu-item {
        display: flex;
        align-items: center;
    }

    .anticon-check {
        font-size: 10px;
        color: #1890ff;
    }
}

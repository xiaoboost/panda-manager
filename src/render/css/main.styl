@import './variable';
@import './font';
@import '../../../node_modules/antd/dist/antd.css'

* {
    margin: 0;
    padding: 0;
    border: 0;
    cursor: inherit;
    user-select: inherit;
    box-sizing: border-box;
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
}

html, body, #app {
    overflow: hidden;
    width: 100%;
    height: 100%;
    user-select: none;
    cursor: default;
    color: Black;
    font-family: font-default;
    font-size: font-default-size;
    font-smoothing();
}

input, textarea {
    cursor: text;
}

#app > main {
    display: flex;
    flex-direction: column;

    height: 100%;
    width: 100%;
    
    .page-header {
        flex-grow: 0;
        flex-shrink: 0;

        width: 100%;
        height: 50px;
        background-color: #3D3D3D;
        box-shadow: 0 3px 3px Shadow;
        padding: 12px;
        display: flex;
        align-items: center;

        > * {
            flex-grow: 0;
            flex-shrink: 0;
            margin-right: 6px;
        }

        .anticon {
            cursor: pointer;
            position: relative;
        }

        .anticon, .page-title {
            color: #fff;
            font-size: 18px;
            padding: 0 4px;
        }
    }
}

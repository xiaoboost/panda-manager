{
  "name": "@panda/packager",
  "version": "1.0.0",
  "description": "panda-manager packager",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "package": "bin/cli.js"
  },
  "scripts": {
    "clear": "rimraf ./dist",
    "types": "tsc -p . --emitDeclarationOnly",
    "dev": "build --development --watch",
    "build": "pnpm run clear && pnpm run types && build --production",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "prepare": "pnpm run build"
  },
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/panda-manager/build/packager"
  },
  "dependencies": {
    "@panda/fs": "workspace:*",
    "chalk": "^4.1.0",
    "esbuild": "^0.9.2",
    "esbuild-plugin-less": "^1.0.2",
    "fast-glob": "^3.2.5"
  },
  "devDependencies": {
    "@panda/builder": "workspace:*",
    "@panda/tsconfig": "workspace:*",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}

{
  "name": "@panda/build",
  "version": "1.0.0",
  "description": "panda-manager build",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "build": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "types": "tsc -p . --emitDeclarationOnly",
    "dev": "tsc -w -p .",
    "bundle": "esbuild src/index.ts src/cli.ts --bundle --minify --target=es6 --outdir=dist --platform=node --external:esbuild --define:process.env.NODE_ENV=\\\"production\\\"",
    "build": "pnpm run clear && pnpm run bundle && pnpm run types",
    "lint": "eslint --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "prepare": "pnpm run build"
  },
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/panda-manager"
  },
  "dependencies": {
    "@panda/utils": "workspace:*",
    "esbuild": "^0.8.54"
  },
  "devDependencies": {
    "@panda/tsconfig": "workspace:*",
    "@types/panda": "workspace:*",
    "chalk": "^4.1.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  }
}

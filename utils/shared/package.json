{
  "name": "@panda/shared",
  "version": "1.0.0",
  "description": "panda-manager shared",
  "source": "src/index.ts",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "dev": "tsc -w -p ./tsconfig.dev.json",
    "build:esm": "tsc -p ./tsconfig.build.json",
    "build": "pnpm run clear && pnpm run build:esm",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}"
  },
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/panda-manager"
  },
  "dependencies": {
    "electron": "^12.0.1",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@panda/tsconfig": "workspace:*",
    "@types/panda": "workspace:*",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  }
}

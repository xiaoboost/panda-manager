{
  "name": "@panda/bundler",
  "version": "1.0.0",
  "description": "panda-manager build",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bundle": "bin/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "types": "tsc -p . --emitDeclarationOnly",
    "dev": "esbuild src/index.ts --bundle --watch --sourcemap --target=es6 --outdir=dist --platform=node --external:typescript --external:esbuild --define:process.env.NODE_ENV=\\\"development\\\"",
    "bundle": "esbuild src/index.ts --bundle --minify --target=es6 --outdir=dist --platform=node --external:typescript --external:esbuild --define:process.env.NODE_ENV=\\\"production\\\"",
    "build": "pnpm run clear && pnpm run types && pnpm run bundle",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}"
  },
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/panda-manager"
  },
  "dependencies": {
    "esbuild": "^0.14.18"
  },
  "devDependencies": {
    "@panda/fs": "workspace:*",
    "@panda/tsconfig": "workspace:*",
    "@types/panda": "workspace:*",
    "chalk": "^5.0.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}

@import './variable.styl';

* {
  margin: 0;
  padding: 0;
  border: 0;
  cursor: inherit;
  user-select: inherit;
  box-sizing: border-box;
  -webkit-margin-before: 0;
  -webkit-margin-after: 0;
}

html, body, #root {
  overflow: hidden;
  width: 100%;
  height: 100%;
  user-select: none;
  cursor: default;
  color: Black;
  font-family: FontDefault;
  font-size: FontDefaultSize;
  font-smoothing();
}

input, textarea {
  cursor: text;
}

ScrollWidth = 4px;

::-webkit-scrollbar {
  width: ScrollWidth;
  height: ScrollWidth;
  background-color: #F5F5F5;
}

::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 (ScrollWidth / 2) rgba(0, 0, 0, 0.3);
  box-shadow: inset 0 0 (ScrollWidth / 2) rgba(0, 0, 0, 0.3);
  background-color: #F5F5F5;
}

::-webkit-scrollbar-thumb {
  -webkit-box-shadow: inset 0 0 (ScrollWidth / 2) rgba(0, 0, 0, .3);
  box-shadow: inset 0 0 (ScrollWidth / 2) rgba(0, 0, 0, .3);
  background-color: #666;
  opacity: .7;
  transition: opacity ease-in-out 200ms;
}

::-webkit-scrollbar-thumb:hover {
  opacity: 1;
}

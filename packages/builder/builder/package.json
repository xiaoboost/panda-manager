{
  "name": "@panda/builder",
  "version": "1.0.0",
  "description": "panda-manager packager",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "build": "bin/cli.js"
  },
  "scripts": {
    "clear": "rimraf ./dist",
    "types": "tsc -p . --emitDeclarationOnly",
    "dev": "build --development --watch",
    "build": "pnpm run clear && pnpm run types && bundle --production",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}"
  },
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/panda-manager/build/packager"
  },
  "dependencies": {
    "@panda/fs": "workspace:*",
    "@panda/utils": "workspace:*",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "esbuild": "^0.12.25",
    "fast-glob": "^3.2.7",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@panda/bundler": "workspace:*",
    "@panda/tsconfig": "workspace:*",
    "ink": "^3.0.9",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  }
}

{
  "name": "panda-manager",
  "version": "1.0.0",
  "description": "panda-manager is a cross platform manga/doujinshi manager with tag",
  "main": "scripts/client.js",
  "author": "xiaoboost",
  "license": "MIT",
  "scripts": {
    "clear": "rimraf ./dist/generated",
    "test": "nyc ava --no-cache",
    "lint": "pnpm run -r lint --parallel --filter .",
    "lint:fix": "pnpm run -r lint:fix --parallel --filter .",
    "package": "rimraf ./dist && npm run build && electron-packager ./dist/generated --out=dist/package --asar",
    "start": "electron --debug=5858 ./dist/generated"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "environmentVariables": {
      "TS_NODE_PROJECT": "tsconfig.test.json"
    },
    "files": [
      "build/**/*.spec.ts",
      "main/**/*.spec.ts",
      "renderer/**/*.spec.ts",
      "utils/**/*.spec.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/panda-manager"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "ava": "^3.15.0",
    "electron-packager": "^15.2.0",
    "eslint": "^7.21.0",
    "eslint-plugin-react": "^7.22.0",
    "nyc": "14.1.1",
    "ts-node": "^9.1.1"
  }
}

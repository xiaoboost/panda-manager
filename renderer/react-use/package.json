{
  "name": "@panda/use",
  "version": "1.0.0",
  "description": "panda-manager react use utils",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "dev": "tsc -w -p ./tsconfig.dev.json",
    "build:esm": "tsc -p ./tsconfig.build.json",
    "build": "pnpm run clear && pnpm run build:esm",
    "lint": "eslint --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "prepare": "pnpm run build"
  },
  "dependencies": {
    "@panda/utils": "workspace:*"
  },
  "devDependencies": {
    "@panda/tsconfig": "workspace:*",
    "electron": "^11.3.0",
    "react": "^17.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.2"
  }
}
